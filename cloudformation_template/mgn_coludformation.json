{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This template deploys two simulated Primary workloads in a separate AWS VPC for Migration testing with AWSMGN. *WARNING* This template creates resources that are billable. You will be billed for the AWS resources used if you create a stack from this template. Please remember to manually delete the CloudFormation stack after you have finished testing.",
    "Parameters": {
        "IPRange": {
            "Type": "String",
            "Default": "172.31.0.0/20",
            "AllowedValues" : ["172.31.0.0/20"],
            "MinLength": 9,
            "MaxLength": 18,
            "Description": "IP range to use for AWSMGN Source Instances/Servers",
            "ConstraintDescription": "Invalid. Please input a correct IP range in the format 172.29.253.0/24."
        },
        "InstanceTypeWindowsIIS": {
            "Description": "The Amazon EC2 instance type for the Application Tier running PHP on Windows Server IIS.",
            "Type": "String",
            "Default": "t3a.large",
            "AllowedValues": [
                "t3a.large",
                "t3a.xlarge"
            ],
            "ConstraintDescription": "Must be a valid EC2 instance type."
        },
        "InstanceTypeWindowsSQL": {
            "Description": "The Amazon EC2 instance type for the Database Tier running SQL Server on Windows Server.",
            "Type": "String",
            "Default": "t3a.large",
            "AllowedValues": [
                "t3a.large",
                "t3a.xlarge"
            ],
            "ConstraintDescription": "Must be a valid EC2 instance type."
        }
    },
    "Mappings": {
        "RegionMap": {
            "us-east-1": { 
                "AmiWindowsIIS": "ami-03c312f0b0f394f16",
                "AmiWindowsSQL": "ami-078f1c68e538dfead"
            },
            "us-east-2": {
                "AmiWindowsIIS" : "ami-08c0f5771f45074c3",
                "AmiWindowsSQL" : "ami-00304e0ec6d2d2cb8"
            }
        }
    },
    "Resources": {
        "vpcSource": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": {
                    "Ref": "IPRange"
                },
                "EnableDnsHostnames": "true",
                "EnableDnsSupport": "true",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AWSMGNSource-VPC"
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "6a99246b-041c-4544-9059-8ece6f92ac18"
                }
            }
        },
        "subnetVPCSource": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "vpcSource"
                },
                "CidrBlock": {
                    "Ref": "IPRange"
                },
                "AvailabilityZone": {
                    "Fn::Select": [
                        0,
                        {
                            "Fn::GetAZs": ""
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AWSMGNSource-Subnet"
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "e883e570-5580-493a-82c7-331a6f05124e"
                }
            }
        },
        "rtbSource": {
            "Type": "AWS::EC2::RouteTable",
            "Properties": {
                "VpcId": {
                    "Ref": "vpcSource"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AWSMGNSource-RouteTable"
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "f6bdcff7-2cd4-4c5e-b5e6-10bd4848a5ab"
                }
            }
        },
        "igwSource": {
            "Type": "AWS::EC2::InternetGateway",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AWSMGNSource-IGW"
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "b612bc52-ad9f-432a-8a22-9440325d212d"
                }
            }
        },
        "igwSourceAttachment": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "Properties": {
                "VpcId": {
                    "Ref": "vpcSource"
                },
                "InternetGatewayId": {
                    "Ref": "igwSource"
                }
            }
        },
        "rtigwsource": {
            "Type": "AWS::EC2::Route",
            "Properties": {
                "RouteTableId": {
                    "Ref": "rtbSource"
                },
                "DestinationCidrBlock": "0.0.0.0/0",
                "GatewayId": {
                    "Ref": "igwSource"
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "181fe147-edf9-461f-b84d-c0ff2ec58178"
                }
            }
        },
        "sourcesubnetrtbAssociation": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "RouteTableId": {
                    "Ref": "rtbSource"
                },
                "SubnetId": {
                    "Ref": "subnetVPCSource"
                }
            }
        },
        "sgSource": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Security Group (firewall) protecting source machines for AWSMGN",
                "GroupName": "AWSMGN-Instances",
                "SecurityGroupEgress": [
                    {
                        "IpProtocol": -1,
                        "CidrIp": "0.0.0.0/0"
                    }
                ],
                "VpcId": {
                    "Ref": "vpcSource"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AWSMGN-SecurityGroup"
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "55386b97-5ffd-46c6-bd31-4cccddeee935"
                }
            }
        },
		"sgSourceIngress":{
			"Type" : "AWS::EC2::SecurityGroupIngress",
			"Properties" : {
				"Description" : "All Intra-VPC traffic allowed",
				"GroupId" : {
                    "Fn::GetAtt": [
                        "sgSource",
                        "GroupId"
                    ]
                },
				"IpProtocol" : -1,
				"SourceSecurityGroupId" : {
                    "Fn::GetAtt": [
                        "sgSource",
                        "GroupId"
                    ]
                }
			}
		},
        "mgnLaunchTemplate": {
            "Type": "AWS::EC2::LaunchTemplate",
            "Properties": {
                "LaunchTemplateName": "MGNInstanceTemplate",
                "LaunchTemplateData": {
                    "MetadataOptions": {
                        "HttpEndpoint": "enabled",
                        "HttpTokens": "optional",
                        "InstanceMetadataTags": "enabled"
                    }
                }
            }
        },        
        "ec2SourceIIS": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "IamInstanceProfile": { "Ref": "iamSSMInstanceProfile" },
                "InstanceType": {
                    "Ref": "InstanceTypeWindowsIIS"
                },
                "ImageId": {
                    "Fn::FindInMap": ["RegionMap", { "Ref": "AWS::Region" }, "AmiWindowsIIS"]
                },
                "LaunchTemplate": {
                    "LaunchTemplateId": {"Ref": "mgnLaunchTemplate"},
                    "Version": "1"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AWSMGN-Windows-IIS"
                    }
                ],
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": "true",
                        "DeviceIndex": "0",
                        "GroupSet": [
                            {
                                "Ref": "sgSource"
                            }
                        ],
                        "SubnetId":{"Ref":"subnetVPCSource"}
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "6522d866-0863-432b-9640-171af86d14c7"
                }
            }
        },
        "ec2SourceSQL": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "IamInstanceProfile": { "Ref": "iamSSMInstanceProfile" },
                "InstanceType": {
                    "Ref": "InstanceTypeWindowsSQL"
                },
                "ImageId": {
                    "Fn::FindInMap": ["RegionMap", { "Ref": "AWS::Region" }, "AmiWindowsSQL"]
                },
                "LaunchTemplate": {
                    "LaunchTemplateId": {"Ref": "mgnLaunchTemplate"},
                    "Version": "1"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AWSMGN-Windows-SQL"
                    }
                ],
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": "true",
                        "DeviceIndex": "0",
                        "GroupSet": [
                            {
                                "Ref": "sgSource"
                            }
                        ],
                        "SubnetId":{"Ref":"subnetVPCSource"},
                        "PrivateIpAddress":"172.31.12.40"
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "e409aeeb-36c3-4f26-8ab4-dd3e271ff603"
                }
            }
        },
        "iamSSMInstanceRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "ec2.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/AmazonSSMManagedInstanceCore"
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AWSMGN-SSM-Role"
                    }
                ]
            }
        },
        "iamSSMInstanceProfile": {
            "Type": "AWS::IAM::InstanceProfile",
            "Properties": {
                "Path": "/",
                "Roles": [
                    {
                        "Ref": "iamSSMInstanceRole"
                    }
                ]
            }
        },
        "SSMAgentAutoUpdate": {
            "Type": "AWS::SSM::Association",
            "Properties": {
                "Name": "AWS-UpdateSSMAgent",
                "Targets": [
                    {
                        "Key": "InstanceIds",
                        "Values": [
                            { "Ref": "ec2SourceIIS" },
                            { "Ref": "ec2SourceSQL" }
                        ]
                    }
                ],
                "ScheduleExpression": "rate(14 days)",
                "MaxErrors": "1",
                "MaxConcurrency": "1"
            }
        }
    },
